# !/bin/bash
 
echo "Enter Two numbers : "
read a
read b
echo "Enter Choice :"
echo "1. Add"
echo "2. Sub"
echo "3. Mul"
echo "4. Div"
read ch

case $ch in
  1)res=`echo $a + $b | bc`
  ;;
  2)res=`echo $a - $b | bc`
  ;;
  3)res=`echo $a \* $b | bc`
  ;;
  4)res=`echo "scale=2; $a / $b" | bc`
  ;;
esac
echo "Result : $res"
